import requests
from bs4 import BeautifulSoup

def check_vulnerabilities(url):
    try:
        response = requests.get(url)
        response.raise_for_status()  # Raise an error for bad responses
        soup = BeautifulSoup(response.text, 'html.parser')

        # Check for common vulnerabilities
        print(f"Scanning {url} for vulnerabilities...\n")

        # Check for open directories
        for link in soup.find_all('a'):
            href = link.get('href')
            if href and (href.endswith('/') or href.startswith('/')):
                print(f"Potential open directory found: {url}{href}")

        # Check for forms that may be vulnerable to SQL injection
        for form in soup.find_all('form'):
            action = form.get('action')
            print(f"Form found: {url}{action}")

    except requests.exceptions.RequestException as e:
        print(f"Error accessing {url}: {e}")

# Example usage
check_vulnerabilities('http://example.com')
